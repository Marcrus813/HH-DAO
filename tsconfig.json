{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./typechain"
    ],
    "paths": {
      "@typechain/*": ["./typechain/*"]
    }
  },
  "include": [
    "./scripts/**/*",
    "./test/**/*",
    "./typechain/**/*",
    "./hardhat.config.js"
  ],
  "exclude": [
    "node_modules",
    "artifacts",
    "cache",
    "dist"
  ]
}